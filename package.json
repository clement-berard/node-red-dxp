{
  "name": "@keload/node-red-dxp",
  "version": "1.28.3",
  "description": "",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "watch": "tsdown --watch",
    "format": "pnpm biome format",
    "lint": "pnpm biome lint",
    "lint:check": "pnpm biome check",
    "release": "pnpm release-it",
    "release:test": "pnpm release-it --dry-run",
    "docs:dev": "./build-docs.sh && vitepress dev docs",
    "docs:build": "./build-docs.sh && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "test:unit": "vitest"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "node-red-dxp": "./dist/cli/index.cjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./editor": {
      "import": "./dist/editor/index.js",
      "require": "./dist/editor/index.cjs"
    },
    "./editor/dom-helper": {
      "import": "./dist/editor/dom-helper/index.js",
      "require": "./dist/editor/dom-helper/index.cjs"
    },
    "./builder": {
      "import": "./dist/builder/index.js",
      "require": "./dist/builder/index.cjs"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    },
    "./utils/controller": {
      "import": "./dist/utils/controller.js",
      "require": "./dist/utils/controller.cjs"
    },
    "./package.json": "./package.json"
  },
  "keywords": [],
  "author": "Cl√©ment BERARD <contact@berard.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/clement-berard/node-red-dxp.git"
  },
  "bugs": {
    "url": "https://github.com/clement-berard/node-red-dxp/issues"
  },
  "homepage": "https://github.com/clement-berard/node-red-dxp",
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@release-it/conventional-changelog": "10.0.5",
    "@types/pug": "^2.0.10",
    "js-yaml": "^4.1.1",
    "plop": "^4.0.5",
    "release-it": "19.2.4",
    "tsdown": "^0.16.4",
    "tsx": "4.21.0",
    "typedoc": "0.28.16",
    "typedoc-plugin-markdown": "4.10.0",
    "typescript": "5.9.3",
    "vitepress": "1.6.4",
    "vitepress-plugin-npm-commands": "^0.8.1",
    "vitepress-plugin-tabs": "^0.7.1",
    "vitest": "4.0.18",
    "zod2md": "^0.2.5"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "8.0.0",
    "@types/html-minifier-terser": "7.0.2",
    "@types/jquery": "3.5.33",
    "@types/jqueryui": "1.12.24",
    "@types/node-red": "1.3.5",
    "@types/prettyjson": "0.0.33",
    "autoprefixer": "10.4.24",
    "browser-sync": "3.0.4",
    "chokidar": "5.0.0",
    "commander": "14.0.3",
    "consola": "3.4.2",
    "cosmiconfig": "9.0.0",
    "cssnano": "7.1.2",
    "esbuild": "0.27.3",
    "fast-glob": "3.3.3",
    "handlebars": "4.7.8",
    "html-minifier-terser": "7.2.0",
    "mdx-to-md": "0.5.2",
    "merge-anything": "6.0.6",
    "node-plop": "^0.32.3",
    "nodemon": "3.1.11",
    "ora": "9.3.0",
    "package-manager-detector": "^1.6.0",
    "postcss": "8.5.6",
    "prettyjson": "1.2.5",
    "pug": "3.0.3",
    "radash": "12.1.1",
    "sass": "1.97.3",
    "tailwindcss": "^3",
    "zod": "^4.3.6"
  },
  "files": [
    "dist"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@parcel/watcher",
      "esbuild"
    ],
    "updateConfig": {
      "ignoreDependencies": [
        "tailwindcss"
      ]
    }
  }
}
