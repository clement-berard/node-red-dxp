{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"files": {
		"includes": [
			"**/src/**/*.ts",
			"**/src/**/*.json",
			"build-readme.ts",
			"!**/dist"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"indentStyle": "space",
			"indentWidth": 2,
			"lineWidth": 120
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	}
}
